
@{
    ViewBag.Title = "loggedIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .auto-style2 {
        text-align: center;
        font-family:'Matura MT Script Capitals';
        font-size: xx-large;
</style>

@*<h2>loggedIn</h2>*@
@if (Session["ID"] != null)
{
    <div class="auto-style2" style="margin-top:10px;margin-bottom:30px; color:Highlight;"><strong>Welcome @Session["user_name"].ToString()</strong></div>
    //<h4>Hello @Session["user_name"].ToString()</h4>
}

<div style="margin-left:180px;margin-right:180px;" id="myCarousel" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/image/Amul-Milk.jpg" style="width:1024px;height:300px;" />
            <div class="carousel-caption">
                <h3></h3>

            </div>
        </div>

        <div class="item">
            <img src="~/image/product.jpg" style="width:1024px;height:300px;" />
            <div class="carousel-caption">
                <h3></h3>

            </div>
        </div>
        <div class="item">
            <img src="~/image/amulsugar.jpg" style="width:1024px;height:300px;" />
            <div class="carousel-caption">
                <h3></h3>
            </div>
        </div>
        <div class="item">
            <img src="~/image/cool1.png" style="width:1024px;height:300px;" />
            <div class="carousel-caption">
                <h3></h3>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

